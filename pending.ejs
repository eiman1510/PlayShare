        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles -->
    <style>
        .menu-button {
            color: dodgerblue;
            width: 170px;
            border-radius: 5px;
            /* Rounded corners */
            cursor: pointer;
            /* Cursor style */
            transition: background-color 0.3s, text-shadow 0.3s ease;
            /* Smooth transition */
        }


        /* styling to only apply when the menu is open*/
        .sidebar:not(.collapsed) .menu-button:hover {
            background-color: lightblue;
            text-shadow: 0 0 3px rgba(102, 204, 255, 0.8)
        }



        .sidebar:not(.collapsed) .menu-button {
            box-shadow: 0 0 30px rgb(0, 0, 0, 0.3);
        }

        .sidebar .collapsed .menu-button {
            box-shadow: none;
        }

        .collapsed .menu-button .fa-fw {
            display: inline !important;
        }




        /* Adjusting height for the sidebar */
        .sidebar {
            height: 100vh;
            /* 100% of the viewport height */
            max-width: 200px;
        }

        .collapsed {
            max-width: 65px;
        }

        .collapsed .nav-item a.nav-link .link-text {
            display: none;
        }

        .collapsed .link-text.menu-heading {
            display: none;
        }

        .collapsed .nav-item a.nav-link .fa-fw {
            /* Adjust the display property to show the icons */
            display: inline;
        }

        .bg-nav-light {
            background-color: #fff;
            border-bottom: 1px solid #ccc;
        }

        .bg-nav-light-left {
            background-color: #fff;
            border-right: 1px solid #ccc;
        }

        #btntogglemenu {
            margin-left: 10px;
            border-right: 1px solid #eee;
            padding-right: 24px;
        }

        .brand-border {
            border-left: 1px solid #ccc;
        }

        .icon-circle {
            height: 60px;
            width: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
        }

        .count-pill {
            width: 60px;
            height: 23px;
            border-radius: 20px;
            margin-top: -10px;
            text-align: center;
            color: white;
        }

        .top-menu-buttons {
            border-radius: 5px;
            margin-right: 10px;
            margin-left: 10px;
            width: 95px;
            cursor: pointer;
            /* Cursor style */
            transition: background-color 0.3s;
            /* Smooth transition */
            box-shadow: 0 0 30px rgb(0, 0, 0, 0.2);
        }

        /* Hover effect */
        .top-menu-buttons:hover {
            background-color: lightblue;
            /* Light blue background color */
        }

        body {
            background-image: url("calBack0.png");
            background-repeat: no-repeat;
            background-size: cover;

        }

        .container-fluid1 {

            font-family: "arial", sans-serif;
            justify-content: center;
            font-style: italic;
            /* font-weight: bold; */
            text-align: center;
            width: 65%;
            height: 500%;
            margin-top: 4%;
            font-size: 20px;
            margin-left: 8%;
            /* padding:10%; */
            /* box-shadow: 0 0 14px rgba(0, 0, 0, 0.5); */


        }

        .custom-container {
            font-family: "arial", sans-serif;
            font-style: italic;
            font-weight: bold;
            text-align: center;
            width: 75%;
            height: 80%;
            margin-left: 2%;
            margin-top: 2%;
            padding: 1%;
            box-shadow: 0 0 14px rgba(0, 0, 0, 0.5);

        }


        .matches {
            background-color: silver;
            background-image: url(mat.png);
            background-repeat: no-repeat;
            background-position: left;
            background-size: 20%;

            font-size: 40px;
            text-align: center;
            color: #173367;
        }

        .tour {
            background-color: #173367;
            background-image: url(tour.png);
            background-repeat: no-repeat;
            background-position: left;
            background-size: 20%;

            font-size: 40px;
            text-align: center;
            color: silver;
        }

        .cal {
            background-color: #173367;
            background-image: url(cal.png);
            background-repeat: no-repeat;
            background-position: left;
            background-size: 20%;

            font-size: 40px;
            text-align: center;
            color: silver;
        }

        .btn {

            /* margin-left: 10%; */
            cursor: pointer;
            background-color: black;
            position: relative;
            font-size: 17px;
            color: white;
            padding: 1% 2%;
            border-radius: 15px;
        }

        select {
            /* margin-left: 9%; */
            position: center;
            padding: 15px;
            width: 270px;
            border: none;
            background-color: white;
            color: black;
            font-size: large;
            left: 20px;
            border: 3px solid black;
        }



        @media (max-width: 768px) {
            .custom-container {
                font-size: 16px;
                /* Reduce font size */
                padding: 1%;
                /* Adjust padding */
            }

            .btn {
                padding: 2% 4%;
                /* Adjust button padding */
            }
        }

        /* Reducing font size for smaller screens */
        @media (max-width: 768px) {
            body {
                font-size: 14px;
            }
        }

        /* Adjusting padding for smaller screens */
        @media (max-width: 768px) {
            .custom-container {
                padding: 1%;
            }
        }

        @media (max-width: 768px) {

            /* Adjust styles for smaller screens */
            .custom-container {
                width: 95%;
                margin-left: auto;
                margin-right: auto;
            }
        }
    </style>
