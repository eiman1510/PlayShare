    function selectPlayer(playerId,itemType) {
        if(itemType === 'player'){
        // Redirect to the player profile page
        window.location.href = `/playerProfile/${playerId}`;
        }
      else if (itemType === 'team') {
        // Redirect to the team page
        window.location.href = `/teamInfo/${playerId}`;
    }

        window.addEventListener('popstate', function(event) {
                if (location.pathname === '/playerProfile' || location.pathname === '/teamInfo') {
                    location.href = '/Search';
                    clearSearchResults();
                }
                });

        history.pushState({}, '', '/Search');
    
        }

        function clearSearchResults() {
