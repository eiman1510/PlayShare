        /* Style for the top section */
        #top-section {
            background-color: #173367;
            /* Dark blue color */
            color: white;
            /* White text color */
            padding: 10px;
            /* Add some padding */
            border-top-left-radius: 10px;
            /* Rounded corners for the top left */
            border-top-right-radius: 10px;
            /* Rounded corners for the top right */
            margin: 0;
        }

        /* Style for the bottom section */
        #bottom-section {
            flex-grow: 1;
            /* Allow bottom section to grow to fill remaining space */
            padding: 10px;
            /* Add some padding */
            margin: 0;
        }

        /* Added CSS for the images */
        .selectable-image {
            border-radius: 20px;
            cursor: pointer;
