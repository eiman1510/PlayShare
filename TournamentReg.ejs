            position: relative;
            color: white;
            top: 2%;
        }

        #submit {
            background-color: silver;
            border-radius: 25px;
            height: 35px;
            width: 5vw;
            border: 3px solid black;
            font-style: italic;
            box-sizing: border-box;
            position: relative;
            margin: auto;
        }

        #submit:hover {
            background-color: dodgerblue;
            color: black
        }

        #N1 {
            width: 35%;
        }

        #date {
            position: relative;
            right: 5%;
        }

        #Sports {
            position: relative;

        }

        #Participants {
            position: relative;
            /* right: 6%; */
        }

        @media (max-width: 768px) {
            .Outer-Layer {
                width: 80%;
                left: 10%;
            }

            .f1 {
                text-align: center;
            }

            #submit {
                width: 10vw;
                left: 0;
                border-radius: 25px;
                top: auto;
                left: 50%;
            }

            #N1 {
                width: 90%;
            }

            #date,
            #Sports,
            #Participants #Location {
                position: static;
                margin-top: 20px;
            }



            #duration {
                position: relative;
                right: 5%;
            }
        }


        .menu-button {
            color: dodgerblue;
            width: 170px;
            border-radius: 5px;
            /* Rounded corners */
            cursor: pointer;
            /* Cursor style */
            transition: background-color 0.3s, text-shadow 0.3s ease;
            /* Smooth transition */
        }


        /* styling to only apply when the menu is open*/
        .sidebar:not(.collapsed) .menu-button:hover {
            background-color: lightblue;
            text-shadow: 0 0 3px rgba(102, 204, 255, 0.8)
        }



        .sidebar:not(.collapsed) .menu-button {
            box-shadow: 0 0 30px rgb(0, 0, 0, 0.3);
        }

        .sidebar .collapsed .menu-button {
            box-shadow: none;
        }

        .collapsed .menu-button .fa-fw {
            display: inline !important;
        }




        /* Adjusting height for the sidebar */
        .sidebar {
            height: 100vh;
            /* 100% of the viewport height */
            max-width: 200px;
            /* display: flex; */
        }

        .collapsed {
            max-width: 65px;
        }

        .collapsed .nav-item a.nav-link .link-text {
            display: none;
        }

        .collapsed .link-text.menu-heading {
            display: none;
        }

        .collapsed .nav-item a.nav-link .fa-fw {
            /* Adjust the display property to show the icons */
            display: inline;
        }

        .bg-nav-light {
            background-color: #fff;
            border-bottom: 1px solid #ccc;
        }

        .bg-nav-light-left {
            background-color: #fff;
            border-right: 1px solid #ccc;
        }

        #btntogglemenu {
            margin-left: 10px;
            border-right: 1px solid #eee;
            padding-right: 24px;
        }

        .brand-border {
            border-left: 1px solid #ccc;
        }

        .icon-circle {
            height: 60px;
            width: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
