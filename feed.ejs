                                        <% } else if (f[i].sportstype === 4) { %>
                                            <td><img src="./basketball.png" alt="Article Image" class="article-image"></td>
                                        <% } %>

                                        <td><%- f[i].Title%></td>
                                        <td><a href="<%- f[i].Links%>" class="article-link" target="_blank">Read More</a></td>
                                    </tr>
                                    
                                    <% } %>

                            </tbody>
